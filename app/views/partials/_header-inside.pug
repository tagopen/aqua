header.header(class= page.header_class)
  .container
    .row
      .col-xs-12.col-sm-5.col-md-4.pull-right
        include ../components/_contact.pug
    .row
      .col-xs-12 
        .row
          .col-xs-12.col-sm-2.header__col
            a.logo(href='#')
              img.img-responsive.logo__img(src='img/logo/logo.png' alt='ЭКО ПАРК «7 НЕБО»')
          .col-xs-12.col-sm-10 
            h1.heading!= page.h1
            h2.subheading!= page.subheading
    .header__icons
      .row
        each advantage, index in page.advantages
          case ((index + 1) % 2)
            when 1
              .col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-2.col-md-4.col-md-offset-0.col-lg-3
                .advantage
                  i.ic.advantage__icon(class= advantage.icon)
                  span.advantage__name!= advantage.name
            default      
              .col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-0.col-md-4.col-lg-3
                .advantage
                  i.ic.advantage__icon(class= advantage.icon)
                  span.advantage__name!= advantage.name