mixin content(item)
  .product
    i.ic.product__icon(class= item.icon)
    .product__content
      if (item.heading)
        h2.product__heading!= item.heading
      if (item.subheading)
        .product__subheading!= item.subheading
      each text in item.text
        p.product__text!= text

section.restaurant
  .container-fluid
    .row
      each item, i in content.page.content
        case i + 1
          when 1
            .col-xs-12.col-sm-8.col-sm-offset-4.col-md-7.col-md-offset-5
              +content(item)
          when 2
            .col-xs-12.col-sm-6.col-md-4
              +content(item)
          when 3
            .col-xs-12.col-sm-6.col-sm-offset-6.col-md-4.col-sm-offset-8
              +content(item)
          when 4
            .col-xs-12.col-sm-6.col-md-7
              +content(item)